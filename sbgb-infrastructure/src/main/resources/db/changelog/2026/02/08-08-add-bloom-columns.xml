<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="2026-08-08-add-bloom-columns" author="daniel">
        <addColumn tableName="galaxy_image">
            <column name="bloom_enabled" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="bloom_radius" type="INT" defaultValueNumeric="10">
                <constraints nullable="false"/>
            </column>
            <column name="bloom_intensity" type="DOUBLE" defaultValueNumeric="0.5">
                <constraints nullable="false"/>
            </column>
            <column name="bloom_threshold" type="DOUBLE" defaultValueNumeric="0.5">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
