<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="22-01-drop-name-column" author="daniel">
        <dropColumn tableName="galaxy_image" columnName="name"/>
    </changeSet>

    <changeSet id="22-01-add-note-check-constraint" author="daniel">
        <sql>ALTER TABLE galaxy_image ADD CONSTRAINT chk_note_range CHECK (note >= 1 AND note &lt;= 5)</sql>
        <rollback>
            <sql>ALTER TABLE galaxy_image DROP CONSTRAINT chk_note_range</sql>
        </rollback>
    </changeSet>

</databaseChangeLog>
