<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="2026-02-28-01-drop-galaxy-image" author="sbgb">
        <dropTable tableName="galaxy_image"/>
    </changeSet>

    <changeSet id="2026-02-28-02-create-galaxy-base-structure" author="sbgb">
        <createTable tableName="galaxy_base_structure">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="max_note" type="INT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="width" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="height" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="seed" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="galaxy_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="core_size" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="galaxy_radius" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="warp_strength" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="noise_octaves" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="noise_persistence" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="noise_lacunarity" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="noise_scale" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="multi_layer_enabled" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="macro_layer_scale" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="macro_layer_weight" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="meso_layer_scale" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="meso_layer_weight" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="micro_layer_scale" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="micro_layer_weight" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="structure_params" type="TEXT"/>
            <column name="config_hash" type="INT">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2026-02-28-03-create-galaxy-cosmetic-render" author="sbgb">
        <createTable tableName="galaxy_cosmetic_render">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="base_structure_id" type="UUID">
                <constraints nullable="false"
                             foreignKeyName="fk_galaxy_render_base_structure"
                             references="galaxy_base_structure(id)"/>
            </column>
            <column name="description" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="note" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="thumbnail" type="BLOB"/>
            <column name="color_palette" type="VARCHAR(50)"/>
            <column name="space_background_color" type="VARCHAR(7)"/>
            <column name="core_color" type="VARCHAR(7)"/>
            <column name="arm_color" type="VARCHAR(7)"/>
            <column name="outer_color" type="VARCHAR(7)"/>
            <column name="bloom_enabled" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="bloom_radius" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="bloom_intensity" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="bloom_threshold" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="star_field_enabled" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="star_density" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="max_star_size" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="diffraction_spikes" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="spike_count" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="cosmetic_hash" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint tableName="galaxy_cosmetic_render"
                             columnNames="base_structure_id, cosmetic_hash"
                             constraintName="uq_galaxy_render_base_cosmetic_hash"/>

        <sql>ALTER TABLE galaxy_cosmetic_render ADD CONSTRAINT chk_galaxy_note_range CHECK (note &gt;= 1 AND note &lt;= 5)</sql>
    </changeSet>

</databaseChangeLog>
